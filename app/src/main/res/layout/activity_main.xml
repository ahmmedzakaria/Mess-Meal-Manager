<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.ahmme.messmealcalculation.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#397F66"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/OneDp"
                android:padding="2dp"
                android:background="#007F66"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="@dimen/TextSize"
                android:text="Name"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/OneDp"
                android:layout_marginRight="@dimen/OneDp"
                android:layout_marginLeft="@dimen/OneDp"
                android:padding="2dp"
                android:background="#007F66"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="@dimen/TextSize"
                android:text="Deposit"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/OneDp"
                android:layout_marginRight="@dimen/OneDp"
                android:layout_marginLeft="@dimen/OneDp"
                android:padding="2dp"
                android:background="#007F66"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="@dimen/TextSize"
                android:text="Meal"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/OneDp"
                android:background="@color/white"
                android:layout_weight="1"
                android:id="@+id/name"
                android:textSize="@dimen/TextSize"
                android:hint="Name"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/OneDp"
                android:layout_marginRight="@dimen/OneDp"
                android:layout_marginLeft="@dimen/OneDp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:id="@+id/deposit"
                android:hint="Deposit"
                android:textSize="@dimen/TextSize"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:id="@+id/meal"
                android:textSize="@dimen/TextSize"
                android:hint="Meal"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1.5"
        android:background="@drawable/custom_button"
        android:textColor="#ededed"
        android:textSize="@dimen/TextSize"
        android:text="Add To List"
        android:onClick="addToList"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Calculate Meal"
        android:layout_weight="1.5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ededed"
        android:background="@drawable/custom_button"
        android:layout_gravity="bottom"
        android:onClick="calculate"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="@dimen/TextSize"
            android:text="No"
            android:id="@+id/sirialNo"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="3"
            android:textSize="@dimen/TextSize"
            android:text="Name"
            android:id="@+id/nameTv"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="3"
            android:textSize="@dimen/TextSize"
            android:text="Diposit"
            android:id="@+id/dipositTv"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:textSize="@dimen/TextSize"
            android:text="Mill"
            android:id="@+id/millTv"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </ListView>
</LinearLayout>
